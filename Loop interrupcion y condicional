sum=0
contador=0
while True:
    val=input("Valor")
    if val=="hecho":
        break
    else:
        try:
            val=float(val)
            sum=sum+val
            contador=contador+1
        except:
            print("Utiliza valores validos")
try:
    average=sum/contador
    print("Suma=",sum)
    print("Datos=",contador)
    print("Promedio=",average)
    print("Adios!")
except:
    print("Division por cero!!!")
